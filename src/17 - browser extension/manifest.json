{
  "manifest_version": 3,
  "name": "Security Copilot Chat",
  "version": "1.0.0",
  "description": "Chat-based interface for Microsoft Security Copilot",
  "permissions": [
    "storage",
    "identity",
    "sidePanel"
  ],
  "host_permissions": [
    "https://graph.microsoft.com/*",
    "https://login.microsoftonline.com/*"
  ],
  "action": {
    "default_title": "Open Security Copilot",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
